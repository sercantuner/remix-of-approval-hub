# =====================================================
# SUMEN BACKEND - ORTAM DEĞİŞKENLERİ
# =====================================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun

# Veritabanı Ayarları
DB_HOST=localhost
DB_PORT=3306
DB_USER=sumen_user
DB_PASSWORD=guclu_sifre_buraya
DB_NAME=sumen_db

# JWT Ayarları
JWT_SECRET=en-az-32-karakter-uzunlugunda-gizli-anahtar
JWT_EXPIRES_IN=7d

# Sunucu Ayarları
PORT=3001
NODE_ENV=development

# CORS - İzin verilen originler (virgülle ayrılmış)
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
